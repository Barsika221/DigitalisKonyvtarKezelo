<Window x:Class="DigitalisKonyvtarKezelo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalisKonyvtarKezelo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#F0F0F0">
        <Border Background="White" 
            CornerRadius="10" 
            Width="300" 
            Padding="20"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="10" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Bejelentkezés" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

                <Grid Margin="0,0,0,10">
                    <TextBox x:Name="UsernameTextBox" 
                         Padding="5"
                         FontSize="16"/>
                    <TextBlock IsHitTestVisible="False"
                           Text="Felhasználónév"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="7,0,0,0"
                           Foreground="Gray">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=UsernameTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <Grid Margin="0,0,0,20">
                    <PasswordBox x:Name="PasswordBox" 
                             Padding="5"
                             FontSize="16"/>
                    <TextBlock IsHitTestVisible="False"
                           Text="Jelszó"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="7,0,0,0"
                           Foreground="Gray">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Password, ElementName=PasswordBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <Button Content="Bejelentkezés" 
                    Click="LoginButton_Click"
                    Background="#007BFF"
                    Foreground="White"
                    Padding="10,5"
                    FontSize="16"
                    Margin="0,0,0,10"/>

                <Button Content="Regisztráció" 
                    Click="RegisterButton_Click"
                    Background="Transparent"
                    Foreground="#007BFF"
                    BorderThickness="0"
                    Padding="10,5"
                    FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

<Window x:Class="DigitalisKonyvtarKezelo.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Regisztráció" Height="426" Width="609"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">
    <Border Background="White" 
            CornerRadius="10" 
            Margin="20"
            Padding="20">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="1" BlurRadius="10" Opacity="0.3"/>
        </Border.Effect>
        <StackPanel>
            <TextBlock Text="Regisztráció" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Felhasználónév:" Margin="0,5"/>
            <TextBox x:Name="UsernameTextBox" 
                     Padding="5"
                     FontSize="14"
                     Margin="0,5,0,10"/>

            <TextBlock Text="Jelszó:" Margin="0,5"/>
            <PasswordBox x:Name="PasswordBox" 
                         Padding="5"
                         FontSize="14"
                         Margin="0,5,0,10"/>

            <TextBlock Text="E-mail:" Margin="0,5"/>
            <TextBox x:Name="EmailTextBox" 
                     Padding="5"
                     FontSize="14"
                     Margin="0,5,0,20"/>

            <Button Content="Regisztráció" 
                    Click="RegisterButton_Click" 
                    Background="#007BFF"
                    Foreground="White"
                    Padding="10,5"
                    FontSize="16"
                    Height="40"/>
        </StackPanel>
    </Border>
</Window>
